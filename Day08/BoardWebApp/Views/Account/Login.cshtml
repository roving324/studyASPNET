@model BoardWebApp.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container custom-login">
    <div class="row justify-content-center">
        <div class="col-3">
            <form asp-controller="Account" asp-action="Login">
                <img class="mb-4" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSEcxinsPZ7zQWBmJGjFjJBfAP7mY7pPmD05w&usqp=CAU" alt="" width="200" height="100">
                <h1 class="h3 mb-3 fw-normal">로그인</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input type="text" class="form-control" asp-for="UserName" placeholder="아이디 입력" id="floatingInput">
                    <label for="floatingInput">사용자 아이디</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" asp-for="Password" id="floatingPassword" placeholder="패스워드">
                    <label for="floatingPassword">패스워드</label>
                </div>

                <div class="checkbox mb-3">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" type="checkbox">&nbsp;@Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">로그인</button>
                <p class="mt-5 mb-3 text-muted">© 2017–2022</p>
            </form>
        </div>
    </div>
</div>