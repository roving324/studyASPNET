@model BoardWebApp.Models.Note

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row pt-4">
        <div class="col-10">
            <h2 class="text-primary">게시판 글 수정</h2>
        </div>
        <div class="col text-end">

        </div>
    </div>
    </div>
<div class="pt-4"></div>
<div class="container">
    <div class="row">
    <div class="col"> @*"col-md-4" : 크기 12중 4를 사용한다.*@
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contents" class="control-label"></label>
                <!-- input 태그를 >> textarea 태그로 변경 -->
                <textarea asp-for="Contents" class="form-control editor" rows="10" placeholder="본문내용"></textarea>
                @*<span asp-validation-for="Contents" class="text-danger"></span>*@
            </div>
            <div class="form-group pt-3">
                    <button type="submit" value="수정" class="btn btn-primary btn-sm">
                        <span class="bi bi-pencil-square">수정</span>
                </button>
                    <a asp-controller="Note" class="btn btn-success btn-sm" asp-action="Index"><i class="bi bi-list-ol"></i>리스트</a>
            </div>
        </form>
    </div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
